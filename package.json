{
  "name": "limkorm-geo-analyzer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "Limkorm",
  "description": "LimRM Geo Analyzer Desktop",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --base=/ && npm run build:server",
    "build:electron-renderer": "tsc && vite build --base=./",
    "start": "node dist-server/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node18 --outfile=dist-server/index.js --external:electron",
    "build:electron-main": "esbuild electron/main.ts --bundle --platform=node --target=node18 --outfile=dist-electron/main.js --external:electron",
    "dist": "npm run build:electron-renderer && npm run build:electron-main && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "chart.js": "^4.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dompurify": "^3.1.5",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.1.7",
    "express": "^4.19.2",
    "googleapis": "^144.0.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "marked": "^13.0.0",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.10",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/leaflet": "^1.9.12",
    "@types/leaflet.markercluster": "^1.5.4",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.0.0",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.limkorm.geo",
    "productName": "LimRM Geo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "dist-server/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "RodjerYan",
        "repo": "LimRM"
      }
    ]
  }
}